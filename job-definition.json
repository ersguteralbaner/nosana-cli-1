{
  "version": "0.1",
  "type": "container",
  "meta": {
    "trigger": "cli"
  },
  "ops": [
    {
      "type": "container/create-volume",
      "id": "create-volume",
      "args": {
        "name": "random-id-volume"
      }
    },
    {
      "type": "container/run",
      "id": "run-from-cli",
      "args": {
        "cmds": [
          "/bin/bash -c ",
          "for i in {1..5}; do echo $i; sleep 1; done;",
          "echo Hello World > /nosana/outputs/test.txt;",
          "ls /nosana/outputs;"
        ],
        "image": "ubuntu",
        "volumes": [{
          "name": "random-id-volume",
          "dest": "/nosana/outputs"
        }]
      }
    },
    {
      "type": "container/run",
      "id": "run-from-cli-2",
      "args": {
        "cmds": [
          "/bin/bash -c ",
          "for i in {1..5}; do echo $i; sleep 1; done;"
        ],
        "image": "ubuntu"
      }
    }
  ]
}