{
  "version": "0.1",
  "type": "container",
  "meta": {
    "trigger": "cli"
  },
  "ops": [
    {
      "type": "container/run",
      "id": "run-from-cli",
      "args": {
        "cmds": [
          "/bin/bash -c ",
          "for i in {1..10}; do echo $i; sleep 1; done;"
        ],
        "image": "ubuntu"
      }
    },
    {
      "type": "container/run",
      "id": "run-from-cli-2",
      "args": {
        "cmds": [
          "/bin/bash -c ",
          "sleep 1;",
          "ls;",
          "sleep 1;"
        ],
        "image": "debian"
      }
    }
  ]
}