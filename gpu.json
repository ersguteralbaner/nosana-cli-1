{
  "version": "0.1",
  "type": "container",
  "meta": {
    "trigger": "cli"
  },
  "ops": [
    {
      "type": "container/run",
      "id": "gpu",
      "args": {
        "cmds": [
          "nvidia-smi"
        ],
        "image": "ubuntu",
        "devices": [
          {
            "path": "nvidia.com/gpu=all"
          }
        ],
        "environment": {
          "DEBUG": "1"
        }
      }
    }
  ]
}