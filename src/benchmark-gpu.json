{
  "version": "0.1",
  "type": "container",
  "meta": {
    "trigger": "cli"
  },
  "ops": [
    {
      "type": "container/run",
      "id": "gpu-stats",
      "args": {
        "cmd": ["sh -c ", "nvidia-smi -L;"],
        "image": "registry.hub.docker.com/nosana/stats",
        "env": {
          "DEBUG": "1"
        },
        "gpu": true
      }
    },
    {
      "type": "container/run",
      "id": "disk-space-check",
      "args": {
        "cmd": [
          "sh -c ",
          "df -m --output=avail --total | awk '\\''END {print $1}'\\'';"
        ],
        "image": "registry.hub.docker.com/nosana/stats",
        "env": {
          "DEBUG": "1"
        }
      }
    }
  ]
}
